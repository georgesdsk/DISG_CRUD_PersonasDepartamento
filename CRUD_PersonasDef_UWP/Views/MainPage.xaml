<Page
    x:Class="CRUD_PersonasDef_UWP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRUD_PersonasDef_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mv="using:CRUD_PersonasDef_UWP.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <Page.DataContext>
        <mv:PersonasVM></mv:PersonasVM>
    </Page.DataContext>
    
    <RelativePanel><!-- HAcerlo como si fuera para un movil-->
        <NavigationView x:Name="navigationView">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Listas"></NavigationViewItemHeader>
                <NavigationViewItem Icon="Play" Content="Menu Item1" Tag="SamplePage1"></NavigationViewItem>             
            </NavigationView.MenuItems>
        </NavigationView>
        <ListView RelativePanel.RightOf="navigationView" SelectedItem="{Binding PersonaSeleccionadavm}" ItemsSource="{Binding VmListaPersonasConDepartamento}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- La foto-->
                        <TextBlock Text="{Binding Nombre}"></TextBlock>
                        <TextBlock Text="{Binding Apellidos}"></TextBlock>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
        
    </RelativePanel>
</Page>
